# Nord fzf theme
# Preview permalink:
# https://vitormv.github.io/fzf-themes#
# This version uses the terminal background & foreground colors (set to -1)
export FZF_DEFAULT_OPTS='
  --color=fg:-1,fg+:#d8dee9,bg:-1,bg+:#3b4252
  --color=hl:#616e88,hl+:#8fbcbb,info:#81a1c1,marker:#81a1c1
  --color=prompt:#81a1c1,spinner:#8fbcbb,pointer:#616e88,header:#5e81ac
  --color=gutter:#3b4252,border:#3b4252,label:#5e81ac,query:#d8dee9
  --preview-window="border-sharp" --prompt="> " --marker="█" --pointer="█"
  --separator="─" --scrollbar="│"'

# Keep the foreground and background hex codes (helpful for referencing on website)
# https://vitormv.github.io/fzf-themes#
